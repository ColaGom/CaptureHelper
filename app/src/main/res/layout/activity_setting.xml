<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:theme="@style/AppTheme.Toolbar"
            app:titleTextAppearance="@style/AppTheme.Toolbar.Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_main_2"
                android:padding="@dimen/default_padding"
                android:text="@string/label_common"
                android:textAppearance="@style/TextAppearance.Content.Title" />

            <TextView
                android:id="@+id/btn_app_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_gray_1"
                android:padding="@dimen/default_padding"
                android:text="@string/label_app_share"
                android:textAppearance="@style/TextAppearance.Content.Default.Inverse" />

            <TextView
                android:id="@+id/btn_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_gray_1"
                android:padding="@dimen/default_padding"
                android:text="@string/label_lock"
                android:textAppearance="@style/TextAppearance.Content.Default.Inverse" />

            <TextView
                android:id="@+id/btn_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_gray_1"
                android:padding="@dimen/default_padding"
                android:text="@string/label_sync"
                android:textAppearance="@style/TextAppearance.Content.Default.Inverse" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_main_2"
                android:padding="@dimen/default_padding"
                android:text="@string/label_trigger"
                android:textAppearance="@style/TextAppearance.Content.Title" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>